<style>
    .wrapper {
        height: 100vh;
        width: 5rem;
        /* background-color: #232740; */
    }

    .navbar {
        width: 5rem;
        height: 100vh;
        position: fixed;
        display: flex;
        background-color: #232740;
        transition: width 200ms ease;
    }

    .navbar-nav {
        list-style: none;
        padding: none;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .nav-item {
        width: 100%;
        display: flex;
    }

    .nav-item:last-child {
        margin-top: auto;
    }


    .nav-link {
        display: flex;
        align-items: center;
        height: 5rem;
        width: 100%;
        text-decoration: none;
        color: white;
        filter: grayscale(100%) opacity(0.7);
        transition: 500ms;
    }

    .nav-link:hover {
        filter: opacity(1);
        background-color: #21295a;
    }

    .link-text {
        display: none;
        margin-left: 1rem;
    }

    .nav-link img {
        margin: 0 20px;
    }

    .navbar:hover {
        width: 16rem;
    }

    .navbar:hover .link-text {
        display: block;
    }

    .logo {
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 1rem;
        text-align: center;
        color: red;
        font-size: 1.5rem;
        letter-spacing: 0.3ch;
        width: 100%;
    }


    .logo svg {
        width: 4rem;
        height: 4rem;
        transform: rotate(0deg);
        transition: 500ms;
        margin: 0 20px;
    }

    .navbar:hover .logo svg {
        transform: rotate(-180deg);
    }

    @media (max-width: 250px),
    (max-width:580px) {
        .navbar {
            height: 5rem;
            width: 100%;
            bottom: 0;
            transition: none;
        }

        .navbar-nav {
            flex-direction: row;
            height: 100%;
            width: 100%;
        }

        .navbar:hover {
            width: 100%;
            height: 5rem;
        }

        .logo {
            display: none;
        }

        .nav-link {
            height: 100%;
            justify-content: center;
        }

        .navbar:hover .link-text {
            display: none;
        }

        .nav-item {
            width: calculate(100%/4);
            height: 100%;
            margin: 0;
        }

        .nav-item:last-child {
            margin-top: 0;
        }
    }
</style>
